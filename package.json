{
  "name": "@vectorscores/scores",
  "version": "3.0.0",
  "description": "A series of new compositions built on the web",
  "author": "John Teske",
  "main": "_site/works.json",
  "directories": {
    "doc": "docs"
  },
  "config": {
    "postcss_options": "--no-map --use postcss-import postcss-custom-properties"
  },
  "scripts": {
    "build": "npm run clean; mkdir -p _site; npm run build:js & npm run build:css & eleventy --quiet; wait && npm run build:flatten",
    "build:css": "npm run build:css:assets & npm run build:css:scores",
    "build:css:assets": "postcss assets/css/*.css --dir _site/assets/css $npm_package_config_postcss_options",
    "build:css:scores": "postcss scores/{*,*/*}/styles.css --base scores --dir _site/scores $npm_package_config_postcss_options",
    "build:js": "find {assets/js,scores} -name 'vectorscores.js' -o -name 'index.js' | xargs -I {} rollup {} --silent --format iife --file _site/{}",
    "build:flatten": "mv _site/scores/* _site/ && rm -rf _site/scores",
    "clean": "rm -rf _site",
    "deploy": "SITE_BASE_URL=scores npm run build && gh-pages -d _site",
    "fix:css": "stylelint assets/css/**/*.css --fix",
    "format": "prettier --write '{layouts,partials,scores}/**/*.js'",
    "serve": "serve -n -l 8081 _site",
    "serve:external": "serve -n -l tcp://0.0.0.0:80 _site",
    "watch": "chokidar '**/*.*' -i 'node_modules' -i '_site' -c \"npm run build && echo 'done'\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnteske/vectorscores.git"
  },
  "keywords": [
    "music",
    "composition",
    "d3"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnteske/vectorscores/issues"
  },
  "homepage": "https://github.com/johnteske/vectorscores#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "app-root-path": "^3.0.0",
    "chokidar-cli": "^2.1.0",
    "eleventy-lib": "github:johnteske/eleventy-lib",
    "gh-pages": "^2.2.0",
    "moment": "^2.27.0",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "postcss-custom-properties": "^9.1.1",
    "postcss-import": "^12.0.1",
    "rollup": "^2.23.0",
    "serve": "^11.3.2",
    "slugify": "^1.4.5",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "@vectorscores/configs": "git+https://github.com/vectorscores/configs.git#main",
    "@vectorscores/design": "git+https://github.com/vectorscores/design.git#main",
    "eslint": "^7.6.0",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0"
  },
  "engines": {
    "node": ">=10"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
